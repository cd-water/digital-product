<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdwater.digitalproduct.mapper.ProductTypeMapper">

    <insert id="insert">
        insert into product_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
        </trim>
    </insert>

    <delete id="deleteById">
        delete
        from product_type
        where id = #{id}
    </delete>

    <delete id="deleteByIds">
        delete from product_type where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="updateById">
        update product_type
        <set>
            <if test="name != null">name = #{name},</if>
        </set>
        where id = #{id}
    </update>

    <select id="selectById" resultType="com.cdwater.digitalproduct.entity.ProductType">
        select id, name
        from product_type
        where id = #{id}
    </select>

    <select id="selectPage" resultType="com.cdwater.digitalproduct.entity.ProductType">
        select id, name from product_type
        <where>
            <if test="name != null and name!= ''">and name like concat('%', #{name}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectByName" resultType="com.cdwater.digitalproduct.entity.ProductType">
        select id, name
        from product_type
        where name = #{name}
    </select>

    <select id="selectAll" resultType="com.cdwater.digitalproduct.entity.ProductType">
        select id, name
        from product_type
    </select>

    <select id="selectHot4" resultType="com.cdwater.digitalproduct.entity.ProductType">

        select pt.id,
               pt.name
        from product_type pt
                 left join product p on pt.id = p.type_id
                 left join product_orders po on p.id = po.product_id and po.order_status != 5
        group by pt.id, pt.name
        order by count(po.id) desc, pt.id
        limit 4;
    </select>
</mapper>
