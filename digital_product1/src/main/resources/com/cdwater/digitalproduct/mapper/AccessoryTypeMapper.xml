<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdwater.digitalproduct.mapper.AccessoryTypeMapper">

    <insert id="insert">
        insert into accessory_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
        </trim>
    </insert>

    <delete id="deleteById">
        delete
        from accessory_type
        where id = #{id}
    </delete>

    <delete id="deleteByIds">
        delete from accessory_type where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="updateById">
        update accessory_type
        <set>
            <if test="name != null">name = #{name},</if>
        </set>
        where id = #{id}
    </update>

    <select id="selectById" resultType="com.cdwater.digitalproduct.entity.AccessoryType">
        select id, name
        from accessory_type
        where id = #{id}
    </select>

    <select id="selectPage" resultType="com.cdwater.digitalproduct.entity.AccessoryType">
        select id, name from accessory_type
        <where>
            <if test="name != null and name != ''">and name like concat('%', #{name}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectByName" resultType="com.cdwater.digitalproduct.entity.AccessoryType">
        select id, name
        from accessory_type
        where name = #{name}
    </select>

    <select id="selectAll" resultType="com.cdwater.digitalproduct.entity.AccessoryType">
        select id, name
        from accessory_type
    </select>

    <select id="selectHot4" resultType="com.cdwater.digitalproduct.entity.AccessoryType">
        select gt.id,
               gt.name
        from accessory_type gt
                 left join accessory g on gt.id = g.type_id
        group by gt.id, gt.name
        order by sum(g.sale_volume) desc, gt.id
        limit 4;
    </select>
</mapper>
